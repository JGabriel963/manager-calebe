generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Person {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  phone     String?
  address   String?

  checkins  Checkin[]
  points    PointTransaction[]

  createdAt DateTime @default(now())

  @@map("persons")
}


model Checkin {
  id        String   @id @default(cuid())
  personId  String
  checkedAt DateTime @default(now())

  person    Person   @relation(fields: [personId], references: [id])
  points    PointTransaction?

  @@unique([personId, checkedAt])
  @@map("checkins")
}


enum PointType {
  CHECKIN
  MANUAL
  BONUS
  PENALTY
}

model PointTransaction {
  id        String   @id @default(cuid())
  personId  String
  checkinId String?  @unique

  points    Int
  reason    String?
  type      PointType @default(MANUAL)

  createdAt DateTime @default(now())

  person    Person   @relation(fields: [personId], references: [id])
  checkin   Checkin? @relation(fields: [checkinId], references: [id], onDelete: Cascade)

  @@map("point_transactions")
}

